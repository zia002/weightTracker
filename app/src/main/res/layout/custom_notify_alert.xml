<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4sdp"
    >
    <RelativeLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/first"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_2sdp"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/notifyimg"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/notifyTimeDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Set Time"
            android:textSize="@dimen/_15sdp"
            android:layout_toEndOf="@id/first"
            android:fontFamily="@font/candal"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_205sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Note"
        android:textColorHint="@color/app"
        app:boxStrokeColor="@color/app"
        app:boxStrokeWidth="@dimen/_2sdp"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/NoteData"
            style="@style/for_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/addUpdate"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/background"
        android:fontFamily="@font/candal"
        android:gravity="center"
        android:padding="@dimen/_6sdp"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextInputLayout"
        android:layout_margin="@dimen/_4sdp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>