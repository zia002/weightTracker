<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:openDrawer="start"
    android:id="@+id/drawerLayout"
    >
    <!-- Navigation drawer -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.HomeFragment">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="@dimen/_3sdp"
            android:elevation="@dimen/_8sdp"
            app:cardElevation="@dimen/_2sdp"
            app:cardUseCompatPadding="true"
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:clickable="true"
                android:id="@+id/navigationImg"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_1sdp"
                android:src="@drawable/menu"
                android:padding="@dimen/_3sdp"
                android:focusable="true" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardUseCompatPadding="true"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2"
            >
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_margin="@dimen/_2sdp"
                android:paddingTop="@dimen/_10sdp"
                android:src="@drawable/home_top"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">
            <androidx.cardview.widget.CardView
                app:cardUseCompatPadding="true"
                android:id="@+id/conditionImgee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_2sdp"
                android:elevation="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"
                android:layout_weight="1"
                >
                <ImageView
                    android:id="@+id/conditionImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_2sdp"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/bmi_2"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    >
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/edit"
                        android:layout_gravity="right"
                        android:padding="@dimen/_3sdp"
                        />
                    <TextView
                        android:clickable="true"
                        android:id="@+id/targetWeight"
                        android:padding="@dimen/_1sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:fontFamily="@font/candal"
                        android:letterSpacing="0.1"
                        android:text="Target\nWeight: "
                        android:textSize="@dimen/_14sdp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/currentWeight"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:fontFamily="@font/candal"
                        android:letterSpacing="0.1"
                        android:text="Current\n Weight: "
                        android:textSize="@dimen/_14sdp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/currentBMI"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:fontFamily="@font/candal"
                        android:letterSpacing="0.1"
                        android:text="Current\nBMI: "
                        android:textSize="@dimen/_14sdp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/conditionHoome"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:fontFamily="@font/candal"
                        android:letterSpacing="0.1"
                        android:text="Condition:\n"
                        android:textSize="@dimen/_14sdp" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/lastAdd"
                        android:padding="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="@dimen/_1sdp"
                        android:fontFamily="@font/candal"
                        android:letterSpacing="0.1"
                        android:text="Last Update:\n"
                        android:textSize="@dimen/_14sdp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawerNavi"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/draw_menu"
        app:headerLayout="@layout/drawer_head"
        />
</androidx.drawerlayout.widget.DrawerLayout>
